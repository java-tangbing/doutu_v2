<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:background">@android:color/transparent</item> -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="anim_menu_pop">
        <item name="android:windowEnterAnimation">@anim/pop_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/pop_bottombar_out</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:button">@drawable/checkbox_state</item>
    </style>
    <style name="switchStyle">
        <item name="android:button">@drawable/switch_state</item>
    </style>
    <style name="DialogNoTitle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item><!--除去title-->
    </style>

    <style name="WxNoTitleBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>
