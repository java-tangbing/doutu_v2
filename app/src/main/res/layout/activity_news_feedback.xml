<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/news_feedback_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/background_gray">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_gray_white"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/news_feedback_user_message_et"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <Button
            android:id="@+id/news_feedback_send_message_bt"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="发送"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>