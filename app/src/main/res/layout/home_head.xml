<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll_head_view"
    android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/home_xrl_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_hot_face"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/hone_bt_hotexpression"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/tv_theme_face"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/hone_bt_theme"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/tv_joke"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/hone_bt_joke"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
           />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:background="#ececec"
        />
</LinearLayout>