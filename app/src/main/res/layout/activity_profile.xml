<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#9A82FF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/setting_return"
            android:src="@mipmap/com_bt_ttab_return"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside" />
        <TextView
            android:textSize="19sp"
            android:textColor="@color/white"
            android:text="@string/setting"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_data_editor"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_weight="1"
            android:text="@string/data_edit"
            android:textColor="@color/blank"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/com_bt_next"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:layout_width="14.5dp"
            android:layout_height="14.5dp" />
    </LinearLayout>
    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
    <LinearLayout
        android:id="@+id/setting_version_checking"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_weight="1"
            android:text="@string/versions_detection"
            android:textColor="@color/blank"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/com_bt_next"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:layout_width="14.5dp"
            android:layout_height="14.5dp" />
    </LinearLayout>
    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/setting_about_product"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_weight="1"
            android:text="@string/about_product"
            android:textColor="@color/blank"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/com_bt_next"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:layout_width="14.5dp"
            android:layout_height="14.5dp" />
    </LinearLayout>
    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/setting_log_out"
            android:textColor="@color/white"
            android:text="未登录"
            android:background="@drawable/setting_login_btn"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </FrameLayout>

</LinearLayout>